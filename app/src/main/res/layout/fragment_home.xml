<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="#edf1f5"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:background="@drawable/custom_navbar">
            <ImageView
                android:id="@+id/icon"
                android:padding="@dimen/dimen8"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_marginRight="@dimen/dimen3"
                android:src="@drawable/icon_dreader"/>

            <TextView
                android:id="@+id/logo_name"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:textSize="@dimen/font31"
                android:fontFamily="@font/unicorn"
                android:gravity="center"
                android:text="D'Reader"
                android:layout_toEndOf="@+id/icon" />

            <EditText
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:background="@drawable/custom_search"
                android:padding="@dimen/dimen5"
                android:textSize="@dimen/font24"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/hide"
                android:inputType="text"
                android:fontFamily="@font/font_title"
                android:textColor="@color/blue"
                android:imeOptions="actionSearch"
                android:layout_margin="@dimen/dimen5"/>

            <ImageView
                android:id="@+id/hide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen8"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:visibility="invisible"
                android:background="@drawable/ic_hide_blue_24dp"/>

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dimen18"
                android:src="@drawable/ic_search_blue_24dp"/>

        </RelativeLayout>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_to_refresh">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:minHeight="@dimen/dimen360">

<RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ss.com.bannerslider.Slider
            android:id="@+id/slider"
            android:layout_marginTop="@dimen/dimen3"
            android:layout_width="match_parent"
            android:minHeight="@dimen/dimen150"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            app:slider_emptyView="@layout/layout_empty_view"
            app:slider_loopSlides="true"></ss.com.bannerslider.Slider>
    <RelativeLayout
                android:id="@+id/relative_rekomen"
                android:layout_below="@+id/slider"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dimen2"
                android:padding="@dimen/dimen12"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/rekomen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/unicorn"
            android:textSize="@dimen/dimen16"
            android:layout_below="@+id/img_rekomen"
            android:text="TOP RANKING"
            android:layout_alignParentStart="true"/>

                <ImageView
                    android:layout_width="@dimen/dimen38"
                    android:layout_height="@dimen/dimen38"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/img_rekomen"
                    android:src="@drawable/rekomendasi" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/recycler_comic"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_action_view_more" />

                <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/dimen8"
            android:layout_below="@+id/rekomen"
            android:id="@+id/recycler_comic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </RelativeLayout>

     <RelativeLayout
                android:layout_below="@+id/relative_rekomen"
                android:layout_width="match_parent"
                android:id="@+id/relative_rekomen1"
                android:layout_marginTop="@dimen/dimen8"
                android:layout_margin="@dimen/dimen2"
                android:padding="@dimen/dimen12"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rekomen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/unicorn"
                    android:textSize="@dimen/dimen16"
                    android:text="REKOMENDASI"
                    android:layout_alignParentStart="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/recycler_comic1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_action_view_more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dimen8"
                    android:layout_below="@+id/rekomen1"
                    android:id="@+id/recycler_comic1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
     </RelativeLayout>

      <RelativeLayout
                android:layout_below="@+id/relative_rekomen1"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/dimen2"
                android:padding="@dimen/dimen12"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/rekomen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/unicorn"
                    android:textSize="@dimen/dimen16"
                    android:text="FAVORITE"
                    android:layout_alignParentStart="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/recycler_comic2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/ic_action_view_more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="@dimen/dimen8"
                    android:layout_below="@+id/rekomen2"
                    android:id="@+id/recycler_comic2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
      </RelativeLayout>
</RelativeLayout>
    </ScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

</LinearLayout>