<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen300"
    android:layout_height="@dimen/dimen250"
    android:layout_gravity="center"
    android:background="@drawable/custom_about">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <View
                android:id="@+id/close"
                android:layout_width="@dimen/dimen20"
                android:layout_height="@dimen/dimen20"
                android:background="@drawable/ic_cancel_white_24dp"
                android:layout_margin="@dimen/dimen4"
                android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dreader"
            android:fontFamily="@font/unicorn"
            android:textSize="@dimen/font32"
            android:textColor="@color/white_nav"
            android:layout_marginTop="@dimen/dimen12"
            android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Versi 1.0.0"
                    android:fontFamily="@font/unicorn"
                    android:textSize="@dimen/font14"
                    android:textColor="@color/white_nav"
                    android:layout_gravity="center_horizontal"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen3"
                android:layout_marginTop="@dimen/dimen2"
                android:background="@color/cardview_light_background"
                android:layout_marginHorizontal="@dimen/dimen20"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/dimen6"
                    android:layout_marginTop="@dimen/dimen12"
                    android:textColor="@color/white_nav"
                    android:fontFamily="@font/font_utama"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contacts : Dimas.arestu99@gmail.com"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen12"
                    android:textColor="@color/white_nav"
                    android:fontFamily="@font/font_utama"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen3"
                    android:layout_marginTop="@dimen/dimen12"
                    android:background="@color/cardview_light_background"
                    android:layout_marginHorizontal="@dimen/dimen20"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HAPPY READING !!!"
                    android:textSize="@dimen/font24"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dimen12"
                    android:textColor="@color/white_nav"
                    android:fontFamily="@font/unicorn"/>
            </LinearLayout>


</FrameLayout>