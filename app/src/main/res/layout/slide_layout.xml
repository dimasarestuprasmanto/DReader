<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/slide_img"
        android:layout_width="@dimen/dimen200"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:src="@drawable/wk1" />

    <TextView
            android:id="@+id/slide_head"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen50"
            android:textColor="@color/backgorund"
            android:layout_marginVertical="@dimen/dimen24"
            android:text=""
            android:textAlignment="center"
            android:textSize="@dimen/font42"
            android:fontFamily="@font/font_title"
        android:layout_gravity="center"/>

        <TextView
            android:id="@+id/slide_desc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen150"
            android:textAlignment="center"
            android:paddingHorizontal="@dimen/dimen12"
            android:fontFamily="@font/basic_font"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textSize="@dimen/font18" />



</LinearLayout>