    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="@dimen/dimen8"
        android:background="@color/colorWhite"
        android:weightSum="10"
        android:orientation="horizontal">
        <View
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:background="@drawable/ic_close_blue_24dp"
            android:id="@+id/hide_filter"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="@dimen/dimen0"
            android:layout_height="match_parent"
            android:text="FILTER"
            android:layout_weight="3"
            android:textSize="@dimen/font24"
            android:paddingHorizontal="@dimen/dimen8"
            android:textStyle="bold"
            android:fontFamily="@font/font_utama"
            android:gravity="center_vertical"/>

    </LinearLayout>

