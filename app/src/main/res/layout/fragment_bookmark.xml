<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#edf1f5"
    android:layout_height="match_parent"
    android:id="@+id/manga"
    android:orientation="vertical"
    tools:context=".Fragment.BookMarkFragment">


        <RelativeLayout
            android:layout_marginTop="@dimen/dimen8"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dimen8"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:layout_alignParentTop="true"
                android:id="@+id/txt_bookmark"
                android:layout_alignParentStart="true"
                android:text="BOOKMARK"
                android:background="@color/blue"
                android:textSize="@dimen/font24"
                android:paddingHorizontal="@dimen/dimen12"
                android:fontFamily="@font/font_utama"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="match_parent"/>


        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:id="@+id/swipe_to_refresh_bookmark"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_bookmark_list"
                android:padding="@dimen/dimen8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>

