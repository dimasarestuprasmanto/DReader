<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/dimen3"
    android:paddingVertical="@dimen/dimen3"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen250">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dimen8"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <ImageView
                android:id="@+id/image_comic"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/comic_name"
                android:background="@color/bg_color_splas_screen"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:padding="@dimen/dimen8"
                android:text="COMIC"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>