<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen142">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen8"
        app:cardCornerRadius="@dimen/dimen4">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="7">
            <RelativeLayout
                android:layout_width="@dimen/dimen0"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <ImageView
                    android:id="@+id/image_comic"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:transitionName="imagemanga"/>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen0"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dimen8"
                android:paddingVertical="@dimen/dimen2"
                android:layout_marginVertical="@dimen/dimen6"
                android:layout_weight="5">
                <TextView
                    android:id="@+id/comic_name"
                    android:textSize="@dimen/font18"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/dimen4"
                    android:fontFamily="@font/font_utama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/genre"
                    android:singleLine="false"
                    android:maxEms="25"
                    android:textSize="@dimen/font10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/status"
                    android:textSize="@dimen/font10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/released"
                    android:textSize="@dimen/font10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/font10"
                    android:id="@+id/tot_chap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.chip.ChipGroup
                    android:layout_marginTop="@dimen/dimen3"
                    android:id="@+id/grup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>