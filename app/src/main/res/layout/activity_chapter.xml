<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChapterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bg_color_splas_screen"></androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/banner"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen150"
        android:paddingVertical="@dimen/dimen12"
        android:src="@drawable/dummychapter"/>
    <ImageView
        android:layout_marginLeft="@dimen/dimen16"
        android:id="@+id/image"
        android:layout_below="@+id/banner"
        android:layout_width="@dimen/dimen75"
        android:layout_alignParentStart="true"
        android:layout_height="@dimen/dimen100"
        android:paddingVertical="@dimen/dimen12"
        android:src="@drawable/dummychapter"/>

    <TextView
        android:id="@+id/judul"
        android:layout_below="@id/banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/image"
        android:text="Judul"
        android:textSize="@dimen/font24" />
    <TextView
        android:id="@+id/genre"
        android:layout_below="@id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/image"
        android:text="Genres"
        android:textSize="@dimen/font16" />
    <TextView
        android:id="@+id/status"
        android:layout_below="@id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/image"
        android:text="Status"
        android:textSize="@dimen/font16" />
    <TextView
        android:id="@+id/released"
        android:layout_below="@id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/image"
        android:text="Realease"
        android:textSize="@dimen/font16" />
    <TextView
        android:id="@+id/author"
        android:layout_below="@id/released"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/image"
        android:text="Author"
        android:textSize="@dimen/font16" />
    <TextView
        android:id="@+id/header"
        android:layout_below="@id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/font16"
        android:layout_marginLeft="@dimen/dimen16"
        android:layout_alignParentStart="true"
        android:text="Sinopsis"
        android:textSize="@dimen/font16" />

    <TextView
        android:id="@+id/sinopsis"
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/font16"
        android:layout_marginHorizontal="@dimen/dimen16"
        android:layout_alignParentStart="true"
        android:text="Di dunia lain, ada orang yang unggul dalam pertarungan sihir, orang-orang memanggilnya [sage], demi mencari seni pertarungan yang kuat, dia meneliti setiap seni sihir dan pertarungan yang ada, tapi pada akhirnya dia menyadari kalo [tubuhku tak cocok untuk seni sihit], namun dia tak menyerah, dia menyegel jiwanya dan terlahir di masa depan. ketika ingatannya kembali dia menyadari kalo dimasa depan, lvl sihir didunianya saat ini sangat rendah."
        android:textSize="@dimen/font16" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sinopsis"
        android:layout_marginHorizontal="@dimen/font16"/>

</RelativeLayout>